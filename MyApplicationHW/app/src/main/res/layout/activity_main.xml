<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCFBF8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Tv1"
        android:layout_width="349dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="624dp"
        android:fontFamily="monospace"
        android:text="Grade Calculator"
        android:textColor="#59F492"
        android:textSize="34sp"
        android:textStyle="normal|bold"
        android:typeface="normal"
        android:visibility="visible" />

    <EditText
        android:id="@+id/Ed1"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="520dp"
        android:ems="10"
        android:hint="Quizes %15"
        android:hyphenationFrequency="normal"
        android:inputType="textPersonName"
        android:textColorHint="#62E182"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Ed2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="434dp"
        android:ems="10"
        android:hint="Homework %25"
        android:inputType="textPersonName"
        android:textColorHint="#4DC36F"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/Ed3"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="344dp"
        android:ems="10"
        android:hint="Mid terms %30"
        android:inputType="textPersonName"
        android:textColorHint="#4FCA8A"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/Ed4"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="244dp"
        android:ems="10"
        android:hint="Final %30"
        android:inputType="textPersonName"
        android:textColorHint="#40AF72"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="511dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="125dp"
        android:shadowColor="#F4EFEF"
        android:text="CALCULATE"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:rippleColor="#FBFBFB"
        app:strokeColor="#FFFFFF" />

    <TextView
        android:id="@+id/Tv2"
        android:layout_width="181dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="serif-monospace"
        android:text="Result :"
        android:textColor="#4ACA94"
        android:textSize="34sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/r"
        android:layout_width="165dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="206dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="46dp"
        android:textSize="34sp" />

</RelativeLayout>